<Window x:Class="ReactivePlayground.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Canvas Name="C00" Grid.Row="0" Grid.Column="0" Background="Black" />
        <Canvas Name="C01" Grid.Row="0" Grid.Column="1" Background="Beige" />
        <Canvas Name="C10" Grid.Row="1" Grid.Column="0" Background="Blue" />
        <Canvas Name="C11" Grid.Row="1" Grid.Column="1" Background="Purple" />
    </Grid>
</Window>
